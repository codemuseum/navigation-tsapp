<h1>Listing items</h1>

<table>
  <tr>
    <th>Position</th>
    <th>Title</th>
    <th>Url</th>
    <th>Class</th>
  </tr>

<% for item in @items %>
  <tr>
    <td><%=h item.position %></td>
    <td><%=h item.title %></td>
    <td><%=h item.url %></td>
    <td><%=h item.class %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

